{
    "manifest_version": 2,
    "name": "Cookie AsciiDoc Exporter",
    "version": "1.0",
    "description": "Exports cookies as an AsciiDoc table to the console.",
    "permissions": ["cookies", "activeTab", "tabs", "<all_urls>"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      },
      "default_title": "Export Cookies",
      "default_popup": "popup.html"
    }
  }